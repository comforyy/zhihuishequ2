<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="170dp"
    android:orientation="vertical"

    >

    <com.jiuding.developer.zhihuishequ.util.XCRoundRectImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/miaosha_img"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
    />
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:id="@+id/Re_miaosha_jiage"
        android:gravity="center"
        android:textSize="19sp"
        >
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:id="@+id/miaoshu"
            android:textSize="15sp"
            android:text="￥10"

            />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_miaosha_yuanjia"
            android:textSize="15sp"
            android:layout_below="@+id/miaoshu"
            />
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_miaosha_shijia"
            android:layout_below="@+id/tv_miaosha_yuanjia"
            android:textSize="18sp"
            android:text="￥15"
            android:textColor="@color/bg_pice"

            />
        <ImageView
            android:layout_width="63px"
            android:layout_height="63px"
            android:layout_toRightOf="@id/tv_miaosha_shijia"
            android:layout_alignTop="@id/tv_miaosha_shijia"
            android:src="@mipmap/shopping"

            />
    </RelativeLayout>
</LinearLayout>
